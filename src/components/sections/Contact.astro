            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="contact-form-container">
        <form class="contact-form" action="#" method="POST">
          <div class="form-group">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" id="name" name="name" class="form-input" placeholder="John Doe" required>
          </div>
          
          <div class="form-group">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" id="email" name="email" class="form-input" placeholder="john@example.com" required>
          </div>
          
          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" id="subject" name="subject" class="form-input" placeholder="Project Discussion" required>
          </div>
          
          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" rows="6" class="form-input" placeholder="Tell me about your project..." required></textarea>
          </div>
          
          <button type="submit" class="submit-btn group">
            <span class="btn-text">Send Message</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="btn-icon">
              <line x1="22" y1="2" x2="11" y2="13"></line>
              <polygon points="22,2 15,22 11,13 2,9 22,2"></polygon>
            </svg>
          </button>
        </form>
      </div>
    </div>
    
    <!-- Quick Response Notice -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-muted/50 backdrop-blur-sm rounded-xl border border-border">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-sm text-muted-foreground">
          Typically responds within 24 hours
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  .holographic {
    background: linear-gradient(45deg, #3b82f6, #8b5cf6, #06b6d4, #10b981);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographic 4s ease-in-out infinite;
  }
  
  @keyframes holographic {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .contact-info-card {
    @apply bg-card/50 backdrop-blur-sm rounded-2xl p-8 border border-border h-fit;
  }
  
  .contact-method {
    @apply flex items-start gap-4 p-4 rounded-xl transition-all duration-300 hover:bg-muted/30;
  }
  
  .contact-icon {
    @apply w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary flex-shrink-0;
  }
  
  .contact-details {
    @apply flex-1;
  }
  
  .contact-label {
    @apply text-sm font-medium mb-1 text-gray-400;
  }
  
  .contact-value {
    @apply font-medium transition-colors duration-300 text-white;
  }
  
  .contact-value:hover {
    color: rgb(59, 130, 246);
  }
  
  .social-link {
    @apply w-12 h-12 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110;
    background-color: rgba(75, 85, 99, 0.5);
    color: rgb(156, 163, 175);
  }
  
  .social-link:hover {
    background-color: rgb(59, 130, 246);
    color: white;
  }
  
  .contact-form-container {
    @apply backdrop-blur-sm rounded-2xl p-8 border;
    background-color: rgba(55, 65, 81, 0.5);
    border-color: rgb(75, 85, 99);
  }
  
  .contact-form {
    @apply space-y-6;
  }
  
  .form-group {
    @apply space-y-2;
  }
  
  .form-label {
    @apply block text-sm font-medium text-white;
  }
  
  .form-input {
    @apply w-full px-4 py-3 border rounded-xl transition-all duration-300 focus:outline-none focus:ring-2;
    background-color: rgba(17, 24, 39, 0.5);
    border-color: rgb(75, 85, 99);
    color: white;
  }
  
  .form-input::placeholder {
    color: rgb(156, 163, 175);
  }
  
  .form-input:focus {
    background-color: rgb(17, 24, 39);
    border-color: rgb(59, 130, 246);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
  }
  
  .submit-btn {
    @apply w-full bg-gradient-to-r from-primary to-accent text-white py-4 rounded-xl font-semibold transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-primary/25 flex items-center justify-center gap-2;
  }
  
  .btn-icon {
    @apply transition-transform duration-300 group-hover:translate-x-1;
  }
  
  /* Form validation styles */
  .form-input:invalid:not(:placeholder-shown) {
    @apply border-red-500 focus:ring-red-500/50;
  }
  
  .form-input:valid:not(:placeholder-shown) {
    @apply border-green-500 focus:ring-green-500/50;
  }
</style>

<script>
  // Add form submission handler
  const contactForm = document.querySelector('.contact-form');
  
  contactForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(contactForm);
    const data = Object.fromEntries(formData);
    
    // Here you would typically send the data to your server
    console.log('Form submitted:', data);
    
    // Show success message (you can replace this with your own notification system)
    alert('Thank you for your message! I\'ll get back to you soon.');
    
    // Reset form
    contactForm.reset();
  });
  
  // Add animation to form elements
  const formElements = document.querySelectorAll('.form-group, .contact-method');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }, index * 100);
      }
    });
  });
  
  formElements.forEach((element) => {
    element.style.opacity = '0';
    element.style.transform = 'translateY(20px)';
    element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(element);
  });
</script>
