
---
// Hero Section - Sanjay D Portfolio
import AnimatedTitle from '../AnimatedTitle.tsx';
---

<section id="home" class="cursor-target relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-hero">
  <!-- Sophisticated Grid Background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,hsl(var(--border))_1px,transparent_1px),linear-gradient(to_bottom,hsl(var(--border))_1px,transparent_1px)] bg-[size:80px_80px] opacity-30"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-accent/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute inset-0 bg-gradient-radial from-transparent via-background/50 to-background/80"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Main Content -->
    <div class="space-y-8">
      <!-- Profile Image - Responsive -->
      <div class="flex justify-center mb-6 sm:mb-8">
        <div class="relative">
          <img 
            src="/lovable-uploads/224479e8-d491-449c-a9f8-ccb0b9c8aedb.png"
            alt="Sanjay D - Full Stack Developer"
            class="w-24 h-24 sm:w-32 sm:h-32 md:w-40 md:h-40 rounded-full border-2 sm:border-4 border-primary/20 shadow-2xl transform hover:scale-105 transition-all duration-300"
          />
          <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-primary/20 to-accent/20 animate-pulse"></div>
        </div>
      </div>

      <!-- Main Heading - Sophisticated Typography -->
      <div class="space-y-6 sm:space-y-8">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-foreground leading-[0.9] tracking-tight">
          <span class="block mb-2 font-light text-muted-foreground text-lg sm:text-xl md:text-2xl tracking-wider uppercase">Hello, I'm</span>
          <span class="bg-gradient-primary bg-clip-text text-transparent">Sanjay D</span>
        </h1>
        
        <!-- Animated Title Component -->
        <div class="h-20 sm:h-24 flex items-center justify-center">
          <AnimatedTitle client:load />
        </div>
      </div>

      <!-- Subtitle - Responsive -->
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-muted-foreground max-w-4xl mx-auto leading-relaxed font-light px-4">
        I'm passionate about crafting full-stack web applications that solve real-world problems through clean code and intuitive user experiences.
      </p>

      <!-- Premium CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center pt-8 sm:pt-12 px-4">
        <a 
          href="#projects" 
          class="cursor-target group relative w-full sm:w-auto px-8 py-4 bg-primary text-primary-foreground rounded-xl font-semibold text-lg transition-all duration-500 hover:scale-105 hover:shadow-glow-primary text-center overflow-hidden"
        >
          <span class="relative z-10 flex items-center justify-center gap-2">
            View My Work
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
          <div class="absolute inset-0 bg-gradient-primary opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>
        
        <a 
          href="#contact" 
          class="cursor-target group relative w-full sm:w-auto px-8 py-4 border-2 border-primary/20 text-foreground rounded-xl font-semibold text-lg transition-all duration-500 hover:bg-primary/5 hover:border-primary hover:scale-105 hover:shadow-card text-center backdrop-blur-sm"
        >
          <span class="relative z-10 flex items-center justify-center gap-2">
            Get In Touch
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-muted-foreground rounded-full flex justify-center">
        <div class="w-1 h-3 bg-muted-foreground rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </div>
</section>
