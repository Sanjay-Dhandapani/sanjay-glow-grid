<style>
  .holographic {
    background: linear-gradient(45deg, #3b82f6, #8b5cf6, #06b6d4, #10b981);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographic 4s ease-in-out infinite;
  }
  
  @keyframes holographic {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .project-card {
    @apply bg-card/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-border transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl hover:border-primary/50;
  }
  
  .project-card.featured {
    @apply lg:grid lg:grid-cols-2 lg:gap-8 lg:p-8;
  }
  
  .project-image {
    @apply relative overflow-hidden aspect-video lg:aspect-auto;
  }
  
  .project-preview {
    @apply w-full h-full;
  }
  
  .placeholder-image {
    @apply w-full h-64 lg:h-full rounded-xl;
  }
  
  .project-overlay {
    @apply absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center;
  }
  
  .project-links {
    @apply flex gap-4;
  }
  
  .project-link {
    @apply w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white transition-all duration-300 hover:bg-primary hover:scale-110;
  }
  
  .project-content {
    @apply p-6 lg:p-0 lg:flex lg:flex-col lg:justify-center;
  }
  
  .project-meta {
    @apply flex items-center gap-3 mb-3;
  }
  
  .project-status {
    @apply px-3 py-1 bg-primary/10 text-primary text-xs font-medium rounded-full;
  }
  
  .project-year {
    @apply text-xs text-gray-400;
  }
  
  .project-title {
    @apply text-xl lg:text-2xl font-bold mb-3 text-white;
  }
  
  .project-description {
    @apply leading-relaxed mb-6 text-gray-400;
  }
  
  .project-tech {
    @apply flex flex-wrap gap-2;
  }
  
  .tech-tag {
    @apply px-3 py-1 text-xs rounded-full border;
    background-color: rgba(75, 85, 99, 0.5);
    color: rgb(156, 163, 175);
    border-color: rgb(75, 85, 99);
  }
  
  /* Featured project styles */
  .project-card.featured .project-title {
    @apply text-2xl lg:text-3xl;
  }
  
  .project-card.featured .project-description {
    @apply text-lg;
  }
  
  .project-card.featured .placeholder-image {
    @apply h-80 lg:h-full;
  }
</style>

<script>
  // Add intersection observer for project cards animation
  const projectCards = document.querySelectorAll('.project-card');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }, index * 200);
      }
    });
  });
  
  projectCards.forEach((card) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(40px)';
    card.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
    observer.observe(card);
  });
</script>
