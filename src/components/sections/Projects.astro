---
// Projects Section with interactive project cards
---

<section id="projects" class="cursor-target py-24 px-6 relative overflow-hidden bg-background">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25px 25px, currentColor 2px, transparent 0), radial-gradient(circle at 75px 75px, currentColor 2px, transparent 0); background-size: 100px 100px;"></div>
  </div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-muted/50 backdrop-blur-sm rounded-full text-sm font-medium text-muted-foreground border border-border mb-4">
        Featured Work
      </span>
      <h2 class="text-3xl md:text-5xl font-bold mb-6">
        Recent <span class="holographic">Projects</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        A collection of projects that showcase my skills and passion for creating amazing digital experiences
      </p>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid gap-8 mb-16">
      <!-- Digital Marketing Analytics Platform -->
      <div class="project-card featured group" itemscope itemtype="https://schema.org/SoftwareApplication">
        <div class="project-content-main">
          <div class="project-header">
            <div class="project-meta">
              <span class="project-status">Full Stack</span>
              <span class="project-year" itemprop="datePublished">2023</span>
            </div>
            <h3 class="project-title" itemprop="name">Digital Marketing Analytics Platform</h3>
            
            <div class="project-problem">
              <h4 class="problem-title">Problem</h4>
              <p class="problem-description">Digital marketers needed a unified platform to manage campaigns and track performance metrics without juggling multiple tools.</p>
            </div>
            
            <div class="project-solution">
              <h4 class="solution-title">Solution</h4>
              <p class="solution-description" itemprop="description">Developed a full-stack application featuring secure JWT authentication, real-time analytics dashboard, campaign management interface, and microservices architecture for scalability.</p>
            </div>
            
            <div class="project-impact">
              <h4 class="impact-title">Impact</h4>
              <p class="impact-description">Created a streamlined solution that reduces campaign management time by centralizing all marketing activities in one platform.</p>
            </div>
            
            <div class="project-tech">
              <span class="tech-tag">REST APIs</span>
              <span class="tech-tag">MySQL</span>
              <span class="tech-tag">JWT</span>
              <span class="tech-tag">Microservices</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Smart Expense Management System -->
      <div class="project-card group" itemscope itemtype="https://schema.org/SoftwareApplication">
        <div class="project-content-main">
          <div class="project-header">
            <div class="project-meta">
              <span class="project-status">Full Stack</span>
              <span class="project-year" itemprop="datePublished">2023</span>
            </div>
            <h3 class="project-title" itemprop="name">Smart Expense Management System</h3>
            
            <div class="project-problem">
              <h4 class="problem-title">Problem</h4>
              <p class="problem-description">People struggle to track and categorize their spending, leading to poor budgeting decisions.</p>
            </div>
            
            <div class="project-solution">
              <h4 class="solution-title">Solution</h4>
              <p class="solution-description" itemprop="description">Created a user-friendly interface with intelligent expense categorization, visual spending analytics, budget tracking and alerts, and responsive design for mobile and desktop.</p>
            </div>
            
            <div class="project-impact">
              <h4 class="impact-title">Impact</h4>
              <p class="impact-description">Simplified the expense tracking process, enabling users to make informed financial decisions through clear data visualization.</p>
            </div>
            
            <div class="project-tech">
              <span class="tech-tag">JavaScript</span>
              <span class="tech-tag">MySQL</span>
              <span class="tech-tag">Responsive Design</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Premium Portfolio Website -->
      <div class="project-card group" itemscope itemtype="https://schema.org/SoftwareApplication">
        <div class="project-content-main">
          <div class="project-header">
            <div class="project-meta">
              <span class="project-status">Frontend</span>
              <span class="project-year" itemprop="datePublished">2024</span>
            </div>
            <h3 class="project-title" itemprop="name">Premium Portfolio Website</h3>
            
            <div class="project-problem">
              <h4 class="problem-title">Problem</h4>
              <p class="problem-description">Showcase development skills and personal brand with engaging user experience.</p>
            </div>
            
            <div class="project-solution">
              <h4 class="solution-title">Solution</h4>
              <p class="solution-description" itemprop="description">Crafted a custom portfolio featuring advanced animations and transitions, mobile-first responsive design, optimized performance and loading times, and accessible design following WCAG guidelines.</p>
            </div>
            
            <div class="project-impact">
              <h4 class="impact-title">Impact</h4>
              <p class="impact-description">Demonstrates ability to balance technical functionality with compelling visual design.</p>
            </div>
            
            <div class="project-tech">
              <span class="tech-tag">HTML5</span>
              <span class="tech-tag">CSS3</span>
              <span class="tech-tag">JavaScript</span>
              <span class="tech-tag">CSS Animations</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Interior Design Showcase -->
      <div class="project-card group" itemscope itemtype="https://schema.org/SoftwareApplication">
        <div class="project-content-main">
          <div class="project-header">
            <div class="project-meta">
              <span class="project-status">Frontend</span>
              <span class="project-year" itemprop="datePublished">2022</span>
            </div>
            <h3 class="project-title" itemprop="name">Interior Design Showcase</h3>
            
            <div class="project-problem">
              <h4 class="problem-title">Problem</h4>
              <p class="problem-description">First major web project to learn responsive design fundamentals and cross-browser compatibility.</p>
            </div>
            
            <div class="project-solution">
              <h4 class="solution-title">Solution</h4>
              <p class="solution-description" itemprop="description">Built a responsive showcase platform for house interior designs using semantic markup and performance optimization.</p>
            </div>
            
            <div class="project-impact">
              <h4 class="impact-title">Impact</h4>
              <p class="impact-description">This project marked the transition from learning syntax to building complete web solutions and sparked passion for web development.</p>
            </div>
            
            <div class="project-tech">
              <span class="tech-tag">HTML</span>
              <span class="tech-tag">CSS</span>
              <span class="tech-tag">JavaScript</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- View More Button -->
    <div class="text-center">
      <a href="#" class="inline-flex items-center gap-2 px-8 py-4 bg-primary text-primary-foreground rounded-xl font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-primary/25">
        View All Projects
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14"></path>
          <path d="M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .holographic {
    background: linear-gradient(45deg, #000000, #333333, #666666, #000000);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographic 4s ease-in-out infinite;
  }
  
  @keyframes holographic {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .project-card {
    @apply bg-card/50 backdrop-blur-sm rounded-xl border border-border transition-all duration-300 hover:shadow-elegant hover:border-primary/50;
  }
  
  .project-card.featured {
    @apply bg-gradient-to-br from-primary/5 to-accent/5;
  }
  
  .project-content-main {
    @apply p-8;
  }
  
  .project-header {
    @apply space-y-6;
  }
  
  .project-meta {
    @apply flex items-center justify-between mb-4;
  }
  
  .project-status {
    @apply px-3 py-1 bg-primary/10 text-primary text-xs font-medium rounded-full;
  }
  
  .project-year {
    @apply text-sm text-muted-foreground;
  }
  
  .project-title {
    @apply text-2xl font-bold text-foreground font-jetbrains mb-6;
  }
  
  .project-card.featured .project-title {
    @apply text-3xl;
  }
  
  .project-problem,
  .project-solution,
  .project-impact {
    @apply space-y-3;
  }
  
  .problem-title,
  .solution-title,
  .impact-title {
    @apply text-sm font-semibold uppercase tracking-wide;
  }
  
  .problem-title {
    @apply text-destructive;
  }
  
  .solution-title {
    @apply text-primary;
  }
  
  .impact-title {
    @apply text-accent;
  }
  
  .problem-description,
  .solution-description,
  .impact-description {
    @apply text-muted-foreground leading-relaxed;
  }
  
  .project-tech {
    @apply flex flex-wrap gap-2 mt-6;
  }
  
  .tech-tag {
    @apply px-3 py-1 text-xs rounded-full bg-muted/50 text-muted-foreground border border-border transition-colors duration-300;
  }
  
  .tech-tag:hover {
    @apply bg-primary/10 text-primary border-primary/30;
  }
</style>

<script>
  // Add intersection observer for project cards animation
  const projectCards = document.querySelectorAll('.project-card');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }, index * 200);
      }
    });
  });
  
  projectCards.forEach((card) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(40px)';
    card.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
    observer.observe(card);
  });
</script>
