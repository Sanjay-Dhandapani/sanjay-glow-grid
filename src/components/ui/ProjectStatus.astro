---
type Status = "draft" | "published";

const {
  status = "published",
  className = "",
} = Astro.props as {
  status?: Status;
  className?: string;
};

const isDraft = status === "draft";
const label = isDraft ? "In Progress" : "Completed";
const tone = isDraft
  ? "bg-yellow-500/15 text-yellow-300 border-yellow-500/30"
  : "bg-emerald-500/15 text-emerald-300 border-emerald-500/30";
---

<span
  class={`inline-flex items-center gap-1 rounded-full border px-2 py-0.5 text-[11px] font-medium ${tone} ${className}`}
  aria-label={`Project status: ${label}`}
  title={`Status: ${label}`}
>
  <span
    class={`inline-block h-1.5 w-1.5 rounded-full ${
      isDraft ? "bg-yellow-400" : "bg-emerald-400"
    }`}
    aria-hidden="true"
  />
  {label}
</span>